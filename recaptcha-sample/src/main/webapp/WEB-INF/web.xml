    "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<servlet>
		<servlet-name>captchaService</servlet-name>
		<servlet-class>com.agnie.recaptcha.sample.server.RecaptchaServiceImpl</servlet-class>
